#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/c/Users/Barath/starstorage/contracts/contracts-api/node_modules/.pnpm/nodemon@2.0.21/node_modules/nodemon/bin/node_modules:/mnt/c/Users/Barath/starstorage/contracts/contracts-api/node_modules/.pnpm/nodemon@2.0.21/node_modules/nodemon/node_modules:/mnt/c/Users/Barath/starstorage/contracts/contracts-api/node_modules/.pnpm/nodemon@2.0.21/node_modules:/mnt/c/Users/Barath/starstorage/contracts/contracts-api/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="$NODE_PATH:/mnt/c/Users/Barath/starstorage/contracts/contracts-api/node_modules/.pnpm/nodemon@2.0.21/node_modules/nodemon/bin/node_modules:/mnt/c/Users/Barath/starstorage/contracts/contracts-api/node_modules/.pnpm/nodemon@2.0.21/node_modules/nodemon/node_modules:/mnt/c/Users/Barath/starstorage/contracts/contracts-api/node_modules/.pnpm/nodemon@2.0.21/node_modules:/mnt/c/Users/Barath/starstorage/contracts/contracts-api/node_modules/.pnpm/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../bin/nodemon.js" "$@"
else
  exec node  "$basedir/../../bin/nodemon.js" "$@"
fi
